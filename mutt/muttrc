######################
# Mutt configuration

# default identity
set realname = "Franck Michea"
set from = "franck.michea@gmail.com"

set smart_wrap = yes
set markers = no
set mark_old = no

# composing
set editor = 'vim +/^$'
set abort_unmodified = ask-yes
set fast_reply = yes

# reading
set index_format = '%4C %Z %{%b %d, %H:%M:%S}  %-15.15L  (%2M)  %s'
set ascii_chars = yes
set collapse_unread = no
set uncollapse_jump = yes

# sorting
folder-hook "."             set sort=threads
folder-hook "+[Gmail]/Sent" set sort=date-sent

# forwarding
set forward_format = "Fwd: [ %s ]"
set forward_quote = yes

# imap configuration.
set folder = "imaps://imap.gmail.com/"
set spoolfile = +INBOX
set postponed = "+[Gmail]/Drafts"

set mail_check = 90
set timeout = 15

set imap_user = "franck.michea"
set imap_list_subscribed = yes

# smtp configuration
set smtp_url = "smtps://$imap_user@smtp.gmail.com/"
set ssl_force_tls = yes

# store message headers locally to speed things up
set header_cache = ~/.mutt/hcache

# beep on error and new mail
set beep = yes
set beep_new = yes

# header order
unhdr_order *
hdr_order From Subject Date To Cc

# key bindings
bind index - collapse-thread
bind index _ collapse-all

source ~/.mutt/muttrc-colors
