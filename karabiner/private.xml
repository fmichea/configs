<?xml version="1.0"?>
<root>
    <item>
        <name>Das Keyboard 4 - Special Keys</name>
        <identifier>dk4_media</identifier>

        <!-- DAS Keyboard media keys: https://github.com/pauloconnor/das_keyboard -->
        <autogen>
            __KeyToKey__
            ConsumerKeyCode::RawValue::0x0012, ModifierFlag::NONE, ConsumerKeyCode::MUSIC_PREV
        </autogen>
        <autogen>
            __KeyToKey__
            ConsumerKeyCode::RawValue::0x0011, ModifierFlag::NONE, ConsumerKeyCode::MUSIC_NEXT
        </autogen>

        <!-- Activate sleep key and map it to lock -->
        <autogen>
            __KeyToKey__
            ConsumerKeyCode::RawValue::0x0006, ModifierFlag::NONE,
            ConsumerKeyCode::EJECT, ModifierFlag::CONTROL_L | ModifierFlag::SHIFT_L
        </autogen>
    </item>
</root>
