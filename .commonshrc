######################################################################
# .commonshrc: kushou's configuration file for common configurations #
#	           for zsh and bash (like aliases).                      #
######################################################################

##########
# Aliases

alias grep='grep --color=auto'
alias ls='ls --color=auto'
alias l='ls'
alias s='ls'
alias ks='ls'
alias ll='ls -l'
alias la='ls -la'
alias ne='emacs -nw'
alias j='jobs'
alias df='df -h'
alias du='du -h'
alias cp='cp -v'
alias mv='mv -v'
alias rm='rm -v'
alias c='clear'
alias clfiles='find . \( -name "*~" -o -name "*.pyc" -o -name "*.o" \) -delete'

export EDITOR="vim"
export PAGER="most"

export PATH="/opt/android-sdk/platform-tools:$HOME/.local/bin:${PATH}"

if [ -f $HOME/.commonshrc_opt ]; then
   source $HOME/.commonshrc_opt
fi

# EOF
