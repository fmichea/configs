######################################################################
# .commonshrc: kushou's configuration file for common configurations #
#	       for zsh and bash (like aliases).                      #
######################################################################

##########
# Aliases

alias ls='ls --color=auto'
alias ll='ls -l'
alias la='ls -la'
alias ne='emacs -nw'
alias j='jobs'
alias df='df -h'
alias du='du -h'
alias cp='cp -v'
alias mv='mv -v'
alias rm='rm -v'
alias c='clean'
alias clfiles='find . \( -name "*~" -o -name "*.pyc" -o -name "*.o" \) -delete'

export EDITOR="emacs -nw"
export PAGER="most"

if [ -f $HOME/.commonshrc_opt ]; then
   source $HOME/.commonshrc_opt
fi

# EOF